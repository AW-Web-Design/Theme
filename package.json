{
  "name": "@aw-web-design/theme",
  "version": "0.0.17",
  "description": "A theming system built for orchard",
  "scripts": {
    "lint": "yarn lint:js && yarn lint:styled",
    "lint:js": "eslint -c .eslintrc ./ --ext .ts,.tsx --quiet",
    "lint:styled": "stylelint \"**/styled.ts\"",
    "test": "jest --silent",
    "build": "yarn build:cjs && yarn build:esm && yarn build:es && yarn build:copy-files && yarn build:types",
    "build:cjs": "cross-env NODE_ENV=production BABEL_ENV=cjs babel --config-file ./babel.config.js --extensions \".js,.jsx,.ts,.tsx\" ./src --out-dir ./build --ignore \"**/*.test.js,**/*.d.ts\"",
    "build:esm": "cross-env NODE_ENV=production BABEL_ENV=esm babel --config-file ./babel.config.js --extensions \".js,.jsx,.ts,.tsx\" ./src --out-dir ./build/esm --ignore \"**/*.test.js,**/*.d.ts\"",
    "build:es": "cross-env NODE_ENV=production BABEL_ENV=es babel --config-file ./babel.config.js --extensions \".js,.jsx,.ts,.tsx\" ./src --out-dir ./build/es --ignore \"**/*.test.js,**/*.d.ts\"",
    "build:copy-files": "node ./scripts/copy-files.js",
    "build:types": "tsc -p tsconfig.build.json",
    "prebuild": "rimraf build",
    "release": "yarn build && npm publish build --tag latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AW-Web-Design/Theme.git"
  },
  "author": "Andy Wilson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AW-Web-Design/Theme/issues"
  },
  "homepage": "https://github.com/AW-Web-Design/Theme#readme",
  "publishConfig": {
      "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "styled-system": "5.1.5",
    "fs-extra": "^9.0.1",
    "lodash": "^4.17.20",
    "style-dictionary": "^2.10.2",
    "tinycolor2": "^1.4.2",
    "deepmerge": "^4.2.2",
    "styled-components": "^5.2.1",
    "react": "17.0.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "typescript": "^4.0.5",
    "@types/react": "^16.9.56",
    "@types/styled-components": "^5.1.4",
    "@types/styled-system": "^5.1.10"
  },
  "devDependencies": {
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "babel-plugin-react-remove-properties": "0.3.0",
    "babel-plugin-transform-dev-warning": "0.1.1",
    "@babel/plugin-transform-react-constant-elements": "7.12.1",
    "@babel/preset-typescript": "7.12.1",
    "@babel/preset-react": "7.12.5",
    "@babel/plugin-transform-object-assign": "7.12.1",
    "@babel/plugin-transform-runtime": "7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "7.12.1",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "babel-plugin-optimize-clsx": "2.6.1",
    "@babel/cli": "7.12.1",
    "rimraf": "3.0.2",
    "cross-env": "7.0.2",
    "babel-eslint": "^10.0.1",
    "eslint-config-airbnb": "^18.2.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^4.0.2",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^4.1.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "prettier": "2.1.2"
  },
  "publishConfig": { 
    "registry": "https://npm.pkg.github.com/" 
  }
}
