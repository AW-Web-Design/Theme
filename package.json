{
  "name": "@aw-web-design/theme",
  "version": "0.0.4",
  "description": "A theming system built for orchard",
  "scripts": {
    "lint": "yarn lint:js && yarn lint:styled",
    "lint:js": "eslint -c .eslintrc ./ --ext .ts,.tsx --quiet",
    "lint:styled": "stylelint \"**/styled.ts\"",
    "test": "jest --silent",
    "build": "yarn build:cjs && yarn build:esm && yarn build:es && yarn build:umd && yarn build:copy-files && yarn build:types",
    "build:cjs": "cross-env NODE_ENV=production BABEL_ENV=cjs babel --config-file ./babel.config.js --extensions \".js,.ts\" ./src --out-dir ./build --ignore \"**/*.test.js,**/*.d.ts\"",
    "build:esm": "cross-env NODE_ENV=production BABEL_ENV=esm babel --config-file ./babel.config.js --extensions \".js,.ts\" ./src --out-dir ./build/esm --ignore \"**/*.test.js,**/*.d.ts\"",
    "build:es": "cross-env NODE_ENV=production BABEL_ENV=es babel --config-file ./babel.config.js --extensions \".js,.ts\" ./src --out-dir ./build/es --ignore \"**/*.test.js,**/*.d.ts\"",
    "build:umd": "cross-env BABEL_ENV=production-umd rollup -c scripts/rollup.config.js",
    "build:copy-files": "node ./scripts/copy-files.js",
    "build:types": "tsc -p tsconfig.build.json",
    "prebuild": "rimraf build",
    "release": "yarn build && npm publish build --tag latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AW-Web-Design/Theme.git"
  },
  "author": "Andy Wilson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AW-Web-Design/Theme/issues"
  },
  "homepage": "https://github.com/AW-Web-Design/Theme#readme",
  "publishConfig": {
      "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "fs-extra": "^9.0.0",
    "lodash": "^4.17.15",
    "style-dictionary": "^2.9.0",
    "tinycolor2": "^1.4.1",
    "deepmerge": "^4.2.2",
    "styled-components": "^5.0.1",
    "react": "16.13.1",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "typescript": "^3.6.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "7.9.6",
    "@babel/plugin-proposal-object-rest-spread": "7.9.6",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "babel-plugin-optimize-clsx": "2.6.0",
    "@babel/cli": "7.8.4",
    "rimraf": "3.0.2",
    "cross-env": "7.0.2",
    "babel-eslint": "^10.0.1",
    "eslint-config-airbnb": "^18.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-standard": "^4.0.1",
    "stylelint": "^13.3.3",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^4.0.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "prettier": "2.0.5"
  },
  "publishConfig": { 
    "registry": "https://npm.pkg.github.com/" 
  }
}
